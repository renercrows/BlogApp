<div class='user-post-container'> 
  <h1 class='userID'>User ID: <%= @user.id %> </h1>
  <h2 class='user-container3'>Name: <%= @user.name %> </h2>
  <h3 class='user-count'>Number of posts:<%= @user.posts_counter%> </h3>
  <button class='see'><%= link_to "New Post", new_user_post_path(@user.id) %></button>
  <article class='bio'>
    <h4>Bio</h4>
    <p><%= @user.bio %> </p>
  </article>
  <% @user.posts.each_with_index do |post, index| %>
    <div class='user-card-bio'>
      <a href='/users/<%= @user.id %>/posts'> <h3>Post # <%= index + 1 %></h3></a>
      <h4><%= post.text %></h4>
      <h5>Comments:<%= post.comments_counter %></h5>
      <h5>Likes:<%= post.likes_counter %></h5>
    </div>
  <% end %> 
  <button class='see'><%= link_to "See all Posts", user_posts_path(@user), {:class => "button_class"} %></button> 
</div>
