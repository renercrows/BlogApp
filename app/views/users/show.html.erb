<main>
  <section class='user-container'>
      <div class='user'>
        <div class='user-image'>
          <img src='<%= @user.photo %>'>
        </div>
        <div class='user-info'>
          <h2>
            <%= @user.name %>
          </h2>
          <span>
            Number of posts: <%= @user.posts_counter %>
          </span>
        </div>
      </div>

      <div class='user-bio'>
        <h3>
          Bio
        </h3>
        <p>
          <%= @user.bio %>
        </p>
      </div>

      <% @user.last_three_posts.each do |post| %>
        <div class='user-post'>
          <h3>Post <%= post.id %></h3>
          <p><%= post.text %></p>
          <span>Comments: <%= post.comments_counter %></span>
          <span>Likes: <%= post.likes_counter %></span>
        </div>
      <% end %>
      <%= link_to user_posts_path(@user) do %>
        <button type='button' class='see-all-btn'>See all posts</button>
      <% end %>

  </section>
</main>
